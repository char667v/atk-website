---
export interface NewsProps {
  news_image: string;
  date: string;
  headline: string;
  subheadline: string;
}

const { news_image, date, headline, subheadline } = Astro.props as NewsProps;
---

<article class="newscard">
  <div class="news-picture">
    <img src={news_image} alt="News Image" />
  </div>
  <div class="news-info">
    <p class="news-date">{date}</p>
    <h4 class="news-headline">{headline}</h4>
    <p class="news-subheadline">{subheadline}</p>
    <div class="read-more">
      <a href="#" class="read-more-link">LÃ†S MERE</a>
      <img src="/img/svg/redarrowRight_1.svg" class="arrowIcon" />
    </div>
  </div>
</article>

<!-- -------------------------------------------------------- -->
<style>
  @media (max-width: 768px){
  .newscard {
    background-color: #f9f9f9;
    border-radius: 4px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    width: 250px;
    margin: 20px;
    display: flex;
    flex-direction: column;
    transition: transform 0.3s;
  }
  /* .newscard:hover {
    transform: scale(1.1);
  } */
  .news-picture img {
    width: 100%;
    height: 200px; /* Set a fixed height for the image */
    object-fit: cover; /* Ensure the image covers the area, maintaining aspect ratio */
  }
  .news-info {
    padding: 20px; /* Add padding to the news info */
    display: flex;
    flex-direction: column;
    gap: 10px; /* Add gap between elements for spacing */
  }
  .news-date {
    font-size: 0.8em;
    color: gray;
    margin: 0;
  }
  .news-headline {
    font-size: 1em; /* Larger font size for the headline */
    margin: 0;
  }
  .news-subheadline {
    font-size: 0.9em; /* Standard font size for subheadline */
    margin: 0;
  }
  .read-more img{
padding-top: -3%;
  }
}


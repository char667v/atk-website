---
export interface NewsProps {
  news_image: string;
  date: string;
  headline: string;
  subheadline: string;
}

const { news_image, date, headline, subheadline } = Astro.props as NewsProps;
---

<article class="newscard">
  <div class="news-picture">
    <img src={news_image} alt="News Image" />
  </div>
  <div class="news-info">
    <p class="news-date">{date}</p>
    <h4 class="news-headline">{headline}</h4>
    <p class="news-subheadline">{subheadline}</p>
    <button class="read-more">LÃ¦s mere</button>
  </div>
</article>

<style>
  .newscard {
    background-color: #f9f9f9;
    border-radius: 10px;
    border: 1px solid var(--primaryColor);
    overflow: hidden;
    width: 328px;
    margin: 20px;
    box-sizing: border-box; /* Include padding in the element's total width and height */
    display: flex;
    flex-direction: column;
    transition: transform 0.3s; /* smoother transition combined with the hovering */
  }
  .newscard:hover {
    transform: scale(1.1);
  }
  .news-picture img {
    width: 100%;
    height: 200px; /* Set a fixed height for the image */
    object-fit: cover; /* Ensure the image covers the area, maintaining aspect ratio */
  }
  .news-info {
    padding: 20px; /* Add padding to the news info */
    display: flex;
    flex-direction: column;
    gap: 10px; /* Add gap between elements for spacing */
  }
  .news-date {
    font-size: 0.8em; /* Small font size for date */
    color: gray; /* Color for the date */
    margin: 0;
  }
  .news-headline {
    font-size: 1.2em; /* Larger font size for the headline */
    margin: 0;
  }
  .news-subheadline {
    font-size: 1em; /* Standard font size for subheadline */
    margin: 0;
  }
  .read-more {
    align-self: flex-start;
    padding: 10px 15px;
    background-color: var(--primaryColor);
    color: white;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    margin-top: auto; /* Push the button to the bottom of the container */
  }
  .read-more:hover {
    background-color: darken(var(--primaryColor), 10%);
  }
</style>

---
export interface NewsData {
  slug: string;
}

export interface NewsProps {
  news_image: string;
  date: string;
  headline: string;
  subheadline: string;
  article: string;
  id: string; 
  slug: string;
  data: NewsData; // Update the type of data
}


const { article, data, news_image, date, headline, subheadline, slug, id } = Astro.props as NewsProps;
---

<div class="news_card">

  <div class="card-image">
    <img src={news_image} alt="" class="news-img">
  </div>

  <div class="card-content">
    <p class="news-date">{date}</p>
    <h4 class="news-headline">{headline}</h4>
    <p class="news-subheadline">{subheadline}</p>
  </div>

    <div class="read-more">
      <div>
      <a href={`nyheder/${slug}`}>LÆS MERE</a>
      <img src="/img/svg/redarrowRight_1.svg" class="arrowIcon" alt="pil">
    </div>
 
</div>

<style>


.news_card {
  display: grid;
  grid-template-columns: 1fr;
  grid-template-rows: 2fr repeat(2, 1fr);
  transition: transform 0.3s;
  width: 700px;

---
export interface ContactProps {
  role: string;
  name: string;
  email: string;
  phone: string;
  pb: string;
  description: string;
}

const { role, name, description, email, phone, pb, } = Astro.props as ContactProps;
---

<article class="contactCard">
  
    <div class="contactContent">
      <div class="headline"><h4>{role}</h4></div>
      <div><p>{description}</div>
      <div class="info"> <p>{name}</p> <p>{email}</p><p>{phone}</p></div>
</div>

    <div class="profile-picture"> <img src={pb} alt={`${name}'s Profile Picture`} /></div>

   
   

</article>

<style>

  .contactCard {
    display: grid;
    grid-template-columns: 2fr 1fr;
    grid-template-rows: 1fr;
    position: relative;
    background-color: rgb(255, 255, 255);
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    width: 100%;
    height: 100%;
}

.contactContent {
  padding: 5%;
}


  .contactContent p {
   font-size: 0.7rem;
   padding-right: 5%;
  }

  .profile-picture img {
    height: 100%;
    width: 100%;
    object-fit: cover; 
    border-radius: 0px 4px 4px 0px;

  }
  .contactContent h4 {
    font-size: 1rem;
  }
  .info {
    display: flex;
    flex-direction: column;
    margin-top: 20%;
  }

  .info p {
   font-weight: bold;
   font-size: 0.8rem;
  }


  @media only screen and (max-width: 1024px) {

    .contactCard h4 {
    font-size: 0.8rem;
  }

  .contactCard p {
    font-size: 0.6rem;
  }


  }

  @media only screen and (max-width: 400px) {
    .contactCard {
    width: 250px;
  }
  .contactCard p {
    font-size: 0.6rem;
  }
    
    }
</style>

---
const { title, imgPath } = Astro.props;
---

 
  <div class="categoryContainer">
   <div class="content-card">
     <img class="background-img" src={imgPath} alt="Tennisracket" />
     <div class="gradient-card"></div> 
     <h3>{title}</h3>
   </div>


<style> 

.categoryContainer {
    position: relative;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); 
    overflow: hidden;
    width: 100%;
    height: 300px;
    transition: transform 0.3s;/* smoother transition combined with the hovering */
  } 
  .content-card {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;  
    align-items: center; 
    
  }
   .background-img {
    position: absolute;
    object-fit: cover;
    width: 100%;
    height: 100%;
    border-radius: 10px;
    z-index: 3;
  } 
  .gradient-card {
    position: absolute;
    margin-top: 85px;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.9), transparent);
    z-index: 5;
  }
 h3 {
    color: rgb(255, 255, 255);
    font-size: 20px;
    text-align: center;
    margin-top: 60%;
    z-index: 6;
  }
 
  @media (min-width: 768px)
 {
  .categoryContainer:hover{
    transform: scale(1.1);
  }
 }
</style>


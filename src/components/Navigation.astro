<style>

  
  header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    background-color: var(--text-white);
    padding-left: var(--spacing-large);
    /* clip-path: polygon(0 0, 100% 0, 100% 70%, 0 100%, 0 70%); */
    height: 175px;
    width: 100%;
    position: relative; 
    z-index: 10;
  }

  
  nav a {
    font-size: 1rem;
    color: var(--text-black);
    margin-bottom: 20px;
  }

  nav a:hover {
    color: var(--primaryColor);
  }
  .dropdown {
    display: flex;
    position: relative;
    display: inline-block;
    margin-right: 20px;
  }
  .dropdown img {
    width: 12px;
    height: auto;
  }

  .dropdown-content {
    display: none;
    border-radius: 4px;
    position: absolute;
    background-color: var(--text-white);
    width: 200px;
    box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
    animation: fadeIn 0.4s ease forwards; /* Apply fade-in animation */
  }

 
.dropdown-content a {
  font-size: 0.8rem;
  padding: 10px 10px 10px 10px;
  color: var(--text-black);
  text-decoration: none;
  display: block;
  border: none;
}

.dropdown-content a:hover {
  background-color: var(--primaryColor);
  color: var(--text-white);
  
}
.dropdown:hover .dropdown-content {
  display: block;
}
.navBtns {
  display: flex;
  align-items: center;
}

#baneTilstand {
  width: 42px;
  height: auto;
  margin-top: 5%;
  margin-left: var(--spacing-small);
}

#baneBook {
  background-color: var(--secondaryColor);
  text-align: center;
  padding: 10px 20px;
  border-radius: 4px;
}

#baneBook:hover {
  background-color: var(--secondaryColor_dark);
}

.heroVideo {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 90vh;
  overflow: hidden;
}

.heroVideo video {
  position: relative;
  width: 100%;
  height: 100%;
  object-fit: cover;
}

#menu-toggle #close-menu {
  display: none;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}
@keyframes slideInFromTop {
  0% {
    transform: translateY(-100%);
  }
  100% {
    transform: translateY(0);
  }
}

@keyframes slideOutToTop {
  0% {
    transform: translateY(0);
  }
  100% {
    transform: translateY(-100%);
  }
}

@keyframes slideInFrom150 {
  0% {
    transform: translateY(150px);
  }
  100% {
    transform: translateY(0);
  }
}

@keyframes slideOutTo150 {
  0% {
    transform: translateY(0);
  }
  100% {
    transform: translateY(150px);
  }
}

@media only screen and (max-width: 1170px) {
  a {
    font-size: 0.8rem;
  }
}

@media only screen and (max-width: 924px) {
  a {
    font-size: 0.7rem;
  }
  #baneTilstand {
    width: 36px;
  }
  nav a {
    padding: 0px 6px;
  }
}

@media only screen and (max-width: 768px) {
  header {
    height: 75px;
    padding-left: 0;
  }
  nav {
    display: none;
    flex-direction: column;
    top: 75px;
    width: 100%;
    height: 100vh;
    position: absolute;
    background-color: var(--primaryColor);
  }

  .navContainer {
  display: flex;
  flex-direction: column;
  transition: margin-top 0.5s ease; /* Apply transition effect */
}

.navContainer.opened {
  margin-top: 200px; /* Adjust as needed */
}

  nav a {
    font-weight: bold;
    font-size: 1.5rem;
    color: var(--text-white);
    border-right: none;
    margin-left: 5%;
    padding: 10px;
    width: 100%;
    animation: fadeIn 2.5s ease forwards; 
  }

.dropdown {
 margin-top: 10%;

}

.dropdown-content {
  position: relative;
  background-color: var(--primaryColor);
  margin-left: 5%;
  box-shadow: none;

}

.dropdown-content a {
  animation: none;
  color: white;
 
}


  #atkHome {
    padding-left: var(--spacing-small);
    width: 200px;
  }

  #baneTilstand {
    width: 36px;
  }
 
  nav.active {
    animation: slideInFromTop 0.7s forwards;
  }

  nav.reverse {
    animation: slideOutToTop 0.7s forwards;
  }

  #menu-toggle, #close-menu {
    display: block;
    margin-right: var(--spacing-small);
    color: var(--text-black);
  }

  #menu-toggle {
    font-size: 36px;
  }

  #close-menu {
    display: none;
    font-size: 36px;
  }
}

</style>

<script>
document.addEventListener('DOMContentLoaded', function () {
  var menuToggle = document.getElementById('menu-toggle');
  var closeMenu = document.getElementById('close-menu');
  var nav = document.querySelector('nav');

  menuToggle.addEventListener('click', function () {
    nav.style.display = 'flex';
    nav.classList.remove('reverse');
    nav.classList.add('active');
    menuToggle.style.display = 'none';
    closeMenu.style.display = 'block';
  });

  closeMenu.addEventListener('click', function () {
    nav.classList.remove('active');
    nav.classList.add('reverse');
    setTimeout(function () {
      nav.style.display = 'none';
    }, 500);
    menuToggle.style.display = 'block';
    closeMenu.style.display = 'none';
  });
</script>
});
</script> 
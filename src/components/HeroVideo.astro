---
import PrimaryButton from "./PrimaryButton.astro";
import SecondaryBtn from "./SecondaryBtn.astro";
---

<div class="fpHeadline">
  <h3>Samlet om Tennis -</h3> 
  <h3>Fra begynder til mester!</h3>
  <div class="fpBtns">
    <PrimaryButton btnText="BOOK BANE" link="https://atk.halbooking.dk/newlook/default.asp?login=open&pid=00"/>
    <SecondaryBtn btnText="KONTAKT OS" link="/allenyheder"/>
  </div>
</div>

<div class="heroWrapper">
  <div class="heroVideo">
    <video autoplay muted loop>
      <source src="/img/heroVideo.mp4" type="video/mp4">
    </video>
  </div>
  <div class="overlay"></div> <!-- Added overlay div -->
</div>

<style>
 .heroWrapper {
  position: relative;
  width: 100%;
  height: 75vh;
  overflow: hidden;
}

.heroVideo {
  position: absolute;
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.heroVideo video {
  width: 100%;
  height: 100%;
  object-fit: cover;
  object-position: center;
}

.overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6); /* Black overlay with 50% opacity */
  z-index: 5; /* Ensure the overlay is above the video but below the text */
}

.fpHeadline {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  width: 100%;
  display: flex;
  text-align: center;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  z-index: 10; /* Ensure the text is above the overlay */
}

.fpHeadline h3 {
  color: white;
  margin: 0;
  line-height: 1;
  font-size: 3.2rem;
}

.fpBtns {
  margin-top: 2%;
}

/* Responsive adjustments */
@media (max-width: 768px) {
  .heroWrapper {
    height: 80vh;
  }

  .fpHeadline h3 {
    font-size: 2rem;
  }

  .fpBtns {
    margin-top: 4%;
  }
}

@media (max-width: 480px) {
  .heroWrapper {
    height: 80vh;
  }

  .fpHeadline h3 {
    font-size: 1.6rem;
  }

  .fpBtns {
    margin-top: 6%;
  }
}
</style>

<style>

.bannerWrapper {
  position: relative; /* Ensure the wrapper is the positioning context for the button */
}

.bannerBtn {
    position: absolute;
    background-color: var(--primaryColor);
    padding: 15px 30px;
    border-radius: 4px;
    top: 50%;
    left: 10%;
    transform: translate(0, -50%);
    text-decoration: none;
}
.bannerContainer {
    width: 100%;
    height: 200px;
}
.bannerContainer img {
      width: 100%;
      height: 100%; 
      object-fit: cover;
}

@media only screen and (max-width: 768px) {
    .bannerContainer {
    width: 100%;
    height: 100px;
}

}

